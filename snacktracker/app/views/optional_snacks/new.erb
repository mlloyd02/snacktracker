<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= h flash[:alert] %></div>
      <% end %>
      <% unless cookies[:has_suggested] %>
        <h1>Suggest a Snack</h1>
        <p>You may suggest a snack to be voted on for next month by either choosing a previously suggested snack or suggesting something new!</p>
        <br>
        <div class="row">
          <div class="col-md-5">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Suggest an Existing Snack</h3>
                </div>
                <div class="panel-body">
                  <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      Suggest Snack
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                      <% @not_suggested_snacks.each do |snack| %>
                        <li><%= link_to snack.name, "/optional_snacks/#{snack.id}/suggestions", :method=>:post %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="row">
              <h2 class="or"><em>or..</em></h2>
            </div>
          </div>
          <div class="col-md-5">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Suggest a New Snack</h3>
                </div>
                <div class="panel-body">
                  <%= form_for @snack do |f| %>
                    <%= f.label :name %>:
                    <%= f.text_field :name %><br />

                    <%= f.label :location %>:
                    <%= f.text_field :location %><br />

                    <%= f.submit "Add Suggestion", :class=>"btn btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
