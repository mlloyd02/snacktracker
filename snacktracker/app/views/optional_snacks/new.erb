<div class="container-fluid">
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
      <% if flash[:alert] %>
        <div class="alert alert-danger"><%= h flash[:alert] %></div>
      <% end %>
      <% unless cookies[:has_suggested] %>
        <h1>Suggest a Snack</h1>
        <p>You may suggest a snack to be voted on for next month by either choosing a previously suggested snack or suggesting something new!</p>
        <br>
        <div class="row">
          <div class="col-md-5">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Suggest an Existing Snack</h3>
                </div>
                <div class="panel-body">
                  <%= render partial: "shared/dropdown", locals: {not_suggested_snacks: @not_suggested_snacks} %>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-2">
            <div class="row">
              <h2 class="or"><em>or..</em></h2>
            </div>
          </div>
          <div class="col-md-5">
            <div class="row">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Suggest a New Snack</h3>
                </div>
                <div class="panel-body">
                  <%= render partial: "shared/new_snack_form", locals: {snack: @snack} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
